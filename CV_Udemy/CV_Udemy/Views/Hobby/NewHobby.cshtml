@model CV_Udemy.Models.Entity.TBL_Hobby
@{
    ViewBag.Title = "NewHobby";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4 style="font-family: 'Itim' ">Yeni Yazı Ekleme Sayfası</h4>

<form class="form-group" method="post">

    <br />
    <p style="font-family: 'Itim' ">Yazı Başlığı</p>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @style = "font-family:'The Great Escape'" })
    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:Red" })
    <br />
    <p style="font-family: 'Itim' ">Link</p>
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control", @style = "font-family:'The Great Escape'" })
    @Html.ValidationMessageFor(x => x.Description2, "", new { @style = "color:Red" })
    @*@Html.Label("Derece", new { @class = "form-control" })*@
    <br />
    <button class="btn btn-info" style="font-family:'The Great Escape'">Kaydet</button>

</form>
